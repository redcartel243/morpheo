{
  "app": {
    "name": "Number Game",
    "initialState": {
      "score": 0,
      "target": 5,
      "current": 0,
      "message": "Try to reach the target!",
      "isMatched": false
    }
  },
  "layout": {
    "type": "VStack",
    "props": {
      "align": "center",
      "justify": "center",
      "spacing": 4,
      "minH": "100vh",
      "bg": "blue.500",
      "p": 8
    }
  },
  "components": [
    {
      "id": "title",
      "type": "Heading",
      "props": {
        "children": "Number Game",
        "color": "white",
        "mb": 4,
        "size": "xl"
      }
    },
    {
      "id": "target",
      "type": "Text", 
      "props": {
        "children": ["Target: ", { "$state": "target" }],
        "color": "white",
        "fontSize": "2xl",
        "mb": 2
      }
    },
    {
      "id": "current",
      "type": "Text",
      "props": {
        "children": ["Current: ", { "$state": "current" }],
        "color": { "$state": "current > target ? 'red.300' : current < target ? 'blue.300' : 'green.300'" },
        "fontSize": "2xl",
        "mb": 4
      }
    },
    {
      "id": "buttons",
      "type": "HStack",
      "props": {
        "spacing": 4,
        "children": [
          {
            "id": "minusBtn",
            "type": "Button",
            "props": {
              "children": "-1",
              "colorPalette": "red",
              "onClick": "setState({ current: Math.max(0, state.current - 1) })"
            }
          },
          {
            "id": "plusBtn", 
            "type": "Button",
            "props": {
              "children": "+1",
              "colorPalette": "green",
              "onClick": "setState({ current: state.current + 1 })"
            }
          }
        ]
      }
    },
    {
      "id": "message",
      "type": "Text",
      "props": {
        "children": { "$state": "message" },
        "color": "white",
        "fontSize": "lg",
        "mt": 4,
        "opacity": { "$state": "current === target ? 1 : 0" }
      }
    },
    {
      "id": "resetBtn",
      "type": "Button",
      "props": {
        "children": "New Game",
        "colorPalette": "yellow",
        "mt": 4,
        "onClick": "setState({ target: Math.floor(Math.random() * 10) + 1, current: 0, score: current === target ? score + 1 : score })"
      }
    }
  ]
}